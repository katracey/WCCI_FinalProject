@model FinalProject_it3.Models.ContactFormModel

@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title</h2>
<h3></h3>
<address>

    <a href="https://github.com/katracey" target="_blank"><img src="~/Content/Images/GitHub-Mark-64px.png" />     </a>
    <a href="https://www.linkedin.com/in/katherinetracey" target="_blank"><img src="~/Content/Images/In-2C-66px-R.png" /></a><br /><br />
</address>


<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Send me a message</h4>
        <hr />
        <div class="form-group">

            <p>@Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>
        <div class="form-group">
            <p>@Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="form-group">
            <p>@Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>

        <div class="form-group">
            <p>@Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })</p>
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Message)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p><input type="submit" class="btn btn-default" value="Send" /></p>
            </div>
        </div>

    }
</div>



